<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_favorites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="696dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_favorite_bars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="28dp"
        android:text="@string/favorite_bars"
        app:layout_constraintBottom_toTopOf="@+id/favorite_bar_ListView"
        app:layout_constraintEnd_toStartOf="@+id/add_favorite_bar_button"
        app:layout_constraintHorizontal_bias="0.131"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/add_favorite_bar_button"
        android:layout_width="107dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="@string/add_bar"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/favorite_bar_ListView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.985"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
        android:id="@+id/favorite_bar_ListView"
        android:layout_width="411dp"
        android:layout_height="265dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

    </ListView>

    <TextView
        android:id="@+id/text_favorite_drinks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/favorite_drinks"
        app:layout_constraintBottom_toTopOf="@+id/favorite_drink_ListView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.167"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/favorite_bar_ListView"
        app:layout_constraintVertical_bias="0.689" />

    <Button
        android:id="@+id/add_favorite_drink_button"
        android:layout_width="107dp"
        android:layout_height="40dp"
        android:text="@string/add_drink"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/favorite_drink_ListView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.767"
        app:layout_constraintStart_toEndOf="@+id/text_favorite_drinks"
        app:layout_constraintTop_toBottomOf="@+id/favorite_bar_ListView"
        app:layout_constraintVertical_bias="0.836" />

    <ListView
        android:id="@+id/favorite_drink_ListView"
        android:layout_width="0dp"
        android:layout_height="278dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/favorite_bar_ListView">

    </ListView>

</androidx.constraintlayout.widget.ConstraintLayout>