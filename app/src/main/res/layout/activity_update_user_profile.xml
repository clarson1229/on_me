<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateUserProfile"
    android:background="@drawable/pop_gradient"
    android:layout_centerHorizontal="true">

    <TextView
        android:id="@+id/firstName_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/frist_name"
        android:textSize="20sp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/firstName_editText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="18sp"
        android:layout_below="@+id/firstName_title_text"/>
    <TextView
        android:id="@+id/lastname_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/last_name"
        android:layout_below="@+id/firstName_editText"
        android:textSize="20sp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/lastName_editText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="18sp"
        android:layout_below="@+id/lastname_title_text"/>
    <TextView
        android:id="@+id/email_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/email"
        android:layout_below="@+id/lastName_editText"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email_editText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="18sp"
        android:layout_below="@+id/email_title_text"/>
    <TextView
        android:id="@+id/address_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/address"
        android:layout_below="@+id/email_editText"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/address_editText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="18sp"
        android:layout_below="@+id/address_title_text"/>
    <Button
        android:id="@+id/userUpdateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Update Profile"
        android:layout_toRightOf="@+id/firstName_title_text"
        android:layout_marginLeft="50dp"/>

</RelativeLayout>